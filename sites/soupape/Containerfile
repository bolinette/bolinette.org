# Stage 1: Install dependencies
FROM node:25-alpine3.22 AS deps

WORKDIR /app

# Copy workspace configuration
COPY package.json package-lock.json* ./

# Copy shared workspace
COPY shared/package.json ./shared/
COPY shared ./shared

# Copy soupape site package.json
COPY sites/soupape/package.json ./sites/soupape/

# Install dependencies for entire workspace
RUN npm ci

# Stage 2: Build the site
FROM node:25-alpine3.22 AS builder

WORKDIR /app

# Copy everything from deps stage
COPY --from=deps /app /app

# Copy soupape site source
COPY sites/soupape ./sites/soupape

# Build the soupape site
WORKDIR /app/sites/soupape
RUN npm run build

# Stage 3: Serve with nginx
FROM nginx:1.29.4-alpine3.23

# Copy built site
COPY --from=builder /app/sites/soupape/dist /usr/share/nginx/html

# Copy nginx configuration
COPY sites/soupape/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
