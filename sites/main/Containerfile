# Stage 1: Install dependencies
FROM node:25-alpine3.22 AS deps

WORKDIR /app

# Copy workspace configuration
COPY package.json package-lock.json* ./

# Copy shared workspace
COPY shared/package.json ./shared/
COPY shared ./shared

# Copy main site package.json
COPY sites/main/package.json ./sites/main/

# Install dependencies for entire workspace
RUN npm ci

# Stage 2: Build the site
FROM node:25-alpine3.22 AS builder

WORKDIR /app

# Copy everything from deps stage
COPY --from=deps /app /app

# Copy main site source (overwrites the package.json-only copy from deps)
COPY sites/main ./sites/main

# Build the main site
WORKDIR /app/sites/main
RUN npm run build

# Stage 3: Serve with nginx
FROM nginx:1.29.4-alpine3.23

# Copy built site
COPY --from=builder /app/sites/main/dist /usr/share/nginx/html

# Copy nginx configuration
COPY sites/main/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
